<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_detail_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_24"
    android:paddingTop="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_8"
    android:visibility="gone">

    <ImageView
        android:id="@+id/gallery_detail_thumb"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gallery_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="@color/blue_202124"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/gallery_detail_uploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/blue_5F6368"
            android:textSize="@dimen/sp_16" />

        <com.mitsuki.ehit.ui.common.widget.CategoryView
            android:id="@+id/gallery_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:lines="1"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="2dp"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>