<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_warning"
        android:textColor="#f00"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/disclaimer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:lineSpacingMultiplier="1.4"
        android:padding="@dimen/dp_8"
        android:text="@string/text_app_waring"
        android:textColor="#f00"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/disclaimer_no_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_weight="1"
            android:background="@drawable/bg_transparent_button"
            android:minHeight="0dp"
            android:text="@string/text_no"
            android:textColor="@color/black_35"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/disclaimer_yes_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_weight="1"
            android:background="@drawable/bg_transparent_button"
            android:minHeight="0dp"
            android:text="@string/text_yes"
            android:textColor="@color/black_35"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>