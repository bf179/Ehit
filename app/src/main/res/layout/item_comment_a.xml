<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/horizontal_space"
    android:paddingVertical="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textColor="@color/text_color_general"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/comment_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_more_vert_24" />

    </FrameLayout>

    <TextView
        android:id="@+id/comment_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_general"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_color_general"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/comment_vote_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_vote_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_vote"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="2dp"
            android:textColor="@color/text_color_general"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_baseline_thumb_up_alt_16" />

        <TextView
            android:id="@+id/comment_vote_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_vote"
            android:paddingHorizontal="16dp"
            android:paddingVertical="2dp"
            android:textColor="@color/text_color_general"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_baseline_thumb_down_alt_16" />

    </LinearLayout>

</LinearLayout>