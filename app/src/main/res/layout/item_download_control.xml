<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/download_control_uncompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_4"
            android:text="@string/text_uncompleted" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/download_control_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_4"
            android:text="@string/text_completed" />
    </LinearLayout>

    <TextView
        android:id="@+id/download_control_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="全部开始"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/download_control_stop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/download_control_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="全部停止"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>